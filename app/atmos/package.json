{
  "name": "atmos",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run prod",
    "build": "npm-run-all clean transpile copy-eb-stuff build-client",
    "test": "jest && cd client && yarn test",
    "watch:dev": "nodemon",
    "client": "cd client && yarn start",
    "dev": "concurrently --kill-others \"yarn watch:dev\" \"yarn client\"",
    "dev-server": "NODE_ENV=development npm-run-all clean transpile server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "server": "node ./build/bin/www.js",
    "transpile": "babel ./server --out-dir build",
    "clean": "rimraf build",
    "build-client": "cd client && yarn build && cp build/ ../build",
    "copy-eb-stuff": "cp -r .ebextensions .elasticbeanstalk package.json build/"
  },
  "dependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "concurrently": "^6.0.1",
    "jest": "^26.6.3"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "exec": "yarn dev-server",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/tests/**",
      "*.test.js",
      "*.spec.js"
    ]
  }
}
